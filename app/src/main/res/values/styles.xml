<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="Theme.MaterialComponents" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#34A853</item>
        <item name="colorPrimaryVariant">#34A853</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner.DropDown">
        <item name="android:textSize">@dimen/_5sdp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="fontFamily">@font/product_sans_regular</item>
        <item name="android:background">@drawable/spinner_background</item>

    </style>

    <style name="TitleTextAppearance">
        <item name="fontFamily">@font/product_sans_bold</item>
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:textColor">#3B3B3B</item>
    </style>

    <style name="EditTextAppearance">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">#707070</item>
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="TextDetails">
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textColor">#3B3B3B</item>
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="SpinnerAppearance" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">#707070</item>
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="DetailTextAppearance">
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textColor">#707070</item>
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>

</resources>